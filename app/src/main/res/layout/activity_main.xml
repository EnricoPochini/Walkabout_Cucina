<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/listaGruppi"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout


        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        tools:context=".MainActivity">


        <View
            android:id="@+id/rectangle"
            android:layout_width="match_parent"
            android:layout_height="139dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:background="#0ECCA0" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/rectangle"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="35dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="35dp"
            android:layout_marginBottom="35dp"
            android:contentDescription="logo"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/descrInfoGruppi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="160dp"
            android:text="Info gruppi: "
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/bottoneRichiestadati"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="250dp"
            android:layout_marginTop="150dp"
            android:foregroundGravity="center_vertical"
            android:text="Richiedi i dati"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/infoGruppi"
            android:layout_width="365dp"
            android:layout_height="517dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"

            android:layout_marginTop="200dp"
            android:layout_marginEnd="26dp"
            android:textSize="20sp" />





    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>